<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<Pane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #990040;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Pane fx:id="habitatArea" layoutX="80.0" layoutY="120.0" prefHeight="480.0" prefWidth="880.0" style="-fx-background-color: #C30052; -fx-background-radius: 20;" />

        <Label fx:id="keyBindings" layoutX="88.0" layoutY="30.0" text="Press [b] to start&#10;Press [e] to end&#10;Press [t] to show/hide simulation time">
            <font>
                <Font name="Serif Bold" size="26.0" />
            </font>
        </Label>

        <VBox fx:id="statistics" layoutX="968.0" layoutY="150.0">
            <children>
                <Label fx:id="timeLabel" layoutX="968.0" layoutY="120.0" text="Time elapsed: " visible="false">
                    <font>
                        <Font name="Serif Bold" size="26.0" />
                    </font>
                </Label>

                <Label fx:id="devCountLabel" text="Developers: ">
                    <font>
                        <Font name="Serif Bold" size="26.0" />
                    </font>
                </Label>

                <Label fx:id="mgrCountLabel" text="Managers: ">
                    <font>
                        <Font name="Serif Bold" size="26.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</Pane>
